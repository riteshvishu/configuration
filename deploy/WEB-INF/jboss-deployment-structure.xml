      <system export="true">
        <paths>
          <path name="sun/net/spi"/>
          <path name="sun/net/spi/nameservice"/>
          <path name="sun/awt/util"/>
        </paths>
      </system>
    </dependencies>
  </deployment>
</jboss-deployment-structure>